{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Review index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for authoreview in authoreviews %}
            <tr>
                <td>{{ authoreview.id }}</td>
                <td>{{ authoreview.rating }}</td>
                <td>{{ authoreview.Comment }}</td>
                <td>
                    <a href="{{ path('app_review_show', {'id': authoreview.id}) }}">show</a>
                    <a href="{{ path('app_review_edit', {'id': authoreview.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_review_new') }}">Create new</a>
{% endblock %}
